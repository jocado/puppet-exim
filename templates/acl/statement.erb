  # <%= @title %>
<% if @conditions.nil? -%>
  <%=  @action -%>
<% else -%>
<%  printacl=@action -%>
<%  @conditions.each do |option,value| -%>
<%   if value.nil? -%>
<%=   "  %-7s %s\n" % [printacl,option] -%>
<%   else -%>
<%    if value.map { |v| v.include?(":") }.any? -%>
<%     joined_value = "<; " + value.join(" ; ") -%>
<%    else -%>
<%     joined_value = value.join(" : ") -%>
<%    end -%>
<%=   "  %-7s %-13s = %s\n" % [printacl,option,joined_value] %><% printacl="" -%>
<%   end -%>
<%  end -%>
<% end -%>

